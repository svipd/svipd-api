<%= javascript_include_tag "application" %>
<%= stylesheet_link_tag "application" %>

<style>
    .pad-left{
        padding: 1% 5%;
    }
    .navbar-brand{
        font-family: 'Montserrat', sans-serif;
        font-weight: bold;
    }
    .nav-link{
        font-family: 'Montserrat', sans-serif;
        font-weight: bold;
        font-size:18px;
    }
    .navbar-brand{
        font-family: 'Montserrat', sans-serif;
        font-weight: bold;
    }
    .nav-item {
        padding: 0 18px;
    }

    #slide-container {
        position: relative;
        max-width: 100%;
    }

    #slide-first-element {
        display: block;
        width: 100%;
        height: auto;
    }

    #slide-element-2 {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
    }

    .slide-image {
        width: 52%;
        display: inline-block;
    }

    #slide-first-element {
        animation: fade-1 10s infinite;
        -webkit-animation: fade-1 10s infinite;
    }
    #slide-element-2 {
        animation: fade-2 10s infinite;
        -webkit-animation: fade-2 10s infinite;
    }

    @keyframes fade-1 {
        0% { opacity: 1; }
        33% { opacity: 0; }
        66% { opacity: 0; }
        75% {opacity: 1;}
        95% {opacity: 1;}
        100% { opacity: 1; }
    }
    @keyframes fade-2 {
        0% { opacity: 0; }
        33% { opacity: 1; }
        66% { opacity: 1; }
        100% { opacity: 0; }
    }

    .pad-left-more{
        padding: 2% 6%;
    }
    .pad-action {
        padding-top: 50px;
    }
    .pad-left{
        padding: 1% 6%;
    }

    .action-hyper{
        font-family: 'Montserrat', sans-serif;
        font-size: 57px;
        font-weight: bold;
        line-height: 1.5;
    }
    .login-div {
        padding: 6px;
        background-color: #E5E5E5;
        border: 1px solid transparent;
        border-radius: 10px;
        line-height: 1.5;

    }

    .content-login-div {
        padding: 5px;
        background-color: #F5F2F2;
        border-radius: 10px;
    }
    .form-control {
        padding: 15px;
        border-radius: 10px;
    }

    .password-reset {
        color: #409CD0;
        text-decoration: none;
    }

    .password-reset:hover {

        color: #409CD0;
        text-decoration: none;
        border: none;

    }

    .col-7{
        display: block;
        padding-bottom: 10px;
    }
    .white-lm {
        font-family: 'Montserrat', sans-serif;font-weight: lighter;
    }

    .login-btn-pad {
        margin-left: 30px;
    }

    .form-control:focus {
        border-color: inherit;
        -webkit-box-shadow: none;
        box-shadow: none;
    }

    .pad-top-login-box{
        padding-top:17%;
    }

    .yellow_col{
        background-color: #F2C94C;
        border-radius: 10px;
        padding: 15px;
    }

    .yellow_col:hover {
        background-color: black;
        color: white;
        transition: all .2s;
    }
    #footr{
        background-color:black;
    }

    .link-secondary, li{
        font-family: 'Montserrat', sans-serif;
        font-size: 15px;
        line-height: 1.5;
        color: white;
        text-decoration: none;
    }

    h5{ color:white; }
</style>

<%= render "common/header_login" %>


<section id = "Login" style = "margin-bottom: 50px;">
  <div class = "container-fluid">
    <div class = "row pad-action pad-left-more">
      <div class = "col-6">
        <h1 class="action-hyper">Login</h1>
        <br/>
        <div id="slide-container">
          <div id="slide-first-element">
            <%= image_tag "app_search.png", class: "slide-image" %>
          </div>
          <div id="slide-element-2">
            <%= image_tag "search_res.png", class: "slide-image" %>
          </div>
          <br />
        </div >
      </div>

      <div class = "col-6 center-justify pad-top-login-box">
        <div class = "login-div" >
          <div class = "content-login-div">
            <center>
              <h1 class = "action-hyper">sVipd</h1>
              <%= form_tag merchant_login_post_path, :method => :post do %>
                <div class = "col-7">
                  <input class="form-control me-2" type="text" placeholder="Username" name = "username" id = "username" aria-label="Search">
                </div>
                <div class = "col-7">
                  <input class="form-control me-2" type="password" placeholder="Password" name = "password" id = "password" aria-label="Search">
                  <a href = "#" name = "login" id = "login" class ="password-reset white-lm" style = "background-color:#F5F2F2;">Forgot your password?</a>
                </div>

                <div class = "login-btn-pad" style = "margin-bottom:10px;">
                  <button class="btn yellow_col btn-lg section-download-button col-3" type="submit"> Login </button>
                  <%= link_to "New?", new_company_path, :class => 'btn yellow_col btn-lg section-download-button col-3' %>
                </div>
                
              <% end %>
            </center>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<%= render "common/footer" %>