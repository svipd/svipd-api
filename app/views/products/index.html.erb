<h2>All Movies</h2>
<table class="table table-striped col-md-12" id="products">
  <thead>
  </thead>
  <tbody>
    <% @products.each do |movie| %>
      <tr>
        <td><%= movie.pid %></td>
        <td><%= movie.name %></td>
        <td><%= movie.description %></td>
        <td>$<%= movie.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
